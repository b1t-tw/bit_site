block variables
doctype
html(lang="zh-Hant-TW")
head
    <!-- Global site tag (gtag.js) - Google Analytics -->
    script(async src="https://www.googletagmanager.com/gtag/js?id=G-G28VSKXZKS")
    script.
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-G28VSKXZKS');

    title 位元創意 - #{title}
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    meta(property="og:title" content="位元創意")
    meta(property="og:image" content="/assets/img/Waves.png")
    meta(name="description" content="A bit of creativity, create bytes of memory. 「位元創意」主要業務為資訊整合、系統開發、展場及演出裝置設計開發等")
    link(rel="shortcut icon" type="image/x-icon" href="/assets/favicon.ico")
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x' crossorigin='anonymous')
    link(href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@300;400;700&family=Noto+Serif+TC:wght@300;500;700&display=swap" rel="stylesheet")
    //link(href="https://unpkg.com/aos@2.3.1/dist/aos.css?version="+timestamp rel="stylesheet")
    link(rel="stylesheet" href="/assets/css/base.css?version="+timestamp)
    block head

    body(data-spy="scroll" data-bs-target=".navbar" data-offset="100")        
        nav#navbar.navbar.navbar-expand-md.navbar-dark.bg-dark.sticky-top: .container-fluid
            a.navbar-brand(href="/")    
                | 位元創意
            button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
                span.navbar-toggler-icon
            #navbarNav.collapse.navbar-collapse
                mixin navli(_href, _title)
                    li.nav-item
                        a.nav-link(href=_href)= _title
                ul.navbar-nav
                    if _home
                        +navli("#about", "about us")
                    else
                        +navli("/#about", "about us")
                    +navli("#footer", "contacts")
                    li.nav-item.dropdown
                        a.nav-link.dropdown-toggle(href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false") services
                        .dropdown-menu(aria-labelledby="navbarDropdownMenuLink")
                            a.dropdown-item(href="/creative") 藝創合作
                            a.dropdown-item(href="/livestream") 直播技術
                            a.dropdown-item(href="/webdesign") 網頁設計

        block body
        #footer.text-center.bg-dark.text-light.container-fluid
            .row.py-3.justify-content-center
                .col-md-4
                    h5 相關連結 / Links
                    a(href="http://railustre.tw" target="_blank") 光軌創曳工作室
                    br
                    a(href="https://makebackground.io" target="_blank") background images are created by makebackground.io
                .col-md-4
                    h5 聯絡我們 / Contacts
                    a 高任翔 | SeanGau
                    br
                    a sean@b1t.tw
                    
        script(src='https://code.jquery.com/jquery-3.6.0.min.js' integrity='sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=' crossorigin='anonymous')        
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js' integrity='sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4' crossorigin='anonymous')
        //script(src="https://unpkg.com/aos@2.3.1/dist/aos.js")
        script.
            $(function(){
                $('.nav-link').on('click', function(event) {
                var scroll_target = $(event.target).attr("href");
                if(scroll_target == '#' || scroll_target.includes("/#"))
                    return;
                event.preventDefault();
                $('html,body').animate({scrollTop:$(scroll_target).offset().top-$('#navbar').outerHeight(true)},300);
                });

                $(window).on('activate.bs.scrollspy', function (e,obj) {
                });
            });

            $(window).scroll(function(){
                $("#about").css({"background-position": `center ${-$(this).scrollTop()/5}px`})
            });
        block script
